<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pucmasterapps.pucsportmaster.ForecastActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textSize="16dp"
        android:text = "@string/defaultCityName"
        android:id="@+id/city_name"
        android:onClick="openLocation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        android:layout_below="@+id/city_name"
        android:text = ""
        android:id="@+id/main_screen"



        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textSize="20dp"
        android:layout_below="@+id/city_name"
        android:text = "@string/celsius"
        android:layout_toRightOf="@+id/main_screen"
        android:id="@+id/celsius"
        />

    <ImageView
        android:layout_width="20dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/pressure"
        android:layout_height="20dp"
        android:id="@+id/pressureI"
        android:layout_below="@+id/main_screen"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"

         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/pressureI"
        android:layout_below="@+id/main_screen"
        android:text = "@string/defaultCityName"
        android:id="@+id/pressure"

        android:layout_marginLeft="10dp"

        />


    <ImageView
        android:layout_width="20dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/humidity"
        android:layout_height="20dp"
        android:id="@+id/humidityI"
        android:layout_below="@+id/pressureI"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/humidityI"
        android:layout_below="@+id/pressure"
        android:text = "@string/defaultCityName"
        android:id="@+id/humidity"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        />


    <ImageView
        android:layout_width="20dp"

        android:background="@android:color/darker_gray"
        android:src="@drawable/moon"
        android:layout_height="20dp"
        android:id="@+id/moonI"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/humidityI"
        android:layout_marginTop="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/humidityI"
        android:layout_below="@+id/humidity"
        android:text = "@string/defaultCityName"
        android:id="@+id/moon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>


    <ImageView
        android:layout_width="20dp"

        android:background="@android:color/darker_gray"
        android:src="@drawable/eye"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/moonI"
        android:id="@+id/eyeI"
        android:layout_marginTop="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/eyeI"
        android:layout_below="@+id/moon"
        android:text = "@string/defaultCityName"
        android:id="@+id/eye"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>


    <ImageView
        android:layout_width="20dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/sun"
        android:layout_height="20dp"
        android:id="@+id/sunI"
        android:layout_below="@+id/eyeI"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/sunI"
        android:layout_below="@+id/eye"
        android:text = "@string/defaultCityName"
        android:id="@+id/sun"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_below="@+id/sunI"
        android:background="@android:color/darker_gray"
        android:src="@drawable/temperature"
        android:layout_height="20dp"
        android:id="@+id/temperatureI"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/temperatureI"
        android:layout_below="@+id/sun"
        android:text = "@string/defaultCityName"
        android:id="@+id/temperature"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_below="@+id/temperatureI"
        android:background="@android:color/darker_gray"
        android:src="@drawable/wind"
        android:layout_height="20dp"
        android:id="@+id/windI"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@android:color/background_light"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/windI"
        android:layout_below="@+id/temperature"
        android:text = "@string/defaultCityName"
        android:id="@+id/wind"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textSize="9dp"
        android:clickable="true"

        android:textAlignment="viewEnd"
        android:text = "@string/powered"
        android:id="@+id/powered_by"
        android:onClick="openProvider"
        android:paddingTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="32dp" />
</RelativeLayout>
